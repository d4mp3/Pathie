# ==============================================================================
# Django Core Settings
# ==============================================================================

# DEBUG mode - MUST be False in production
# Type: bool
# Default: False
# Values: 0 (False), 1 (True), on, off, true, false
DEBUG=1

# Django Secret Key - MUST be unique and secret in production
# Type: str
# Default: None (required)
# Generate with: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-secret-key-change-this-in-production

# Allowed hosts for Django application
# Type: list[str]
# Default: [] (empty list)
# Format: space-separated hostnames
DJANGO_ALLOWED_HOSTS=localhost 127.0.0.1 [::1]

# ==============================================================================
# PostgreSQL Database Configuration
# ==============================================================================

# Database Engine - PostgreSQL is required for this project
# Type: str
# Default: django.db.backends.postgresql
SQL_ENGINE=django.db.backends.postgresql

# Database Name
# Type: str
# Default: None (required)
SQL_DATABASE=pathie_dev

# Database User
# Type: str
# Default: None (required)
SQL_USER=postgres

# Database Password
# Type: str
# Default: None (required)
# IMPORTANT: Use strong password in production
SQL_PASSWORD=postgres

# Database Host
# Type: str
# Default: localhost
# Use 'db' for Docker Compose service name
SQL_HOST=db

# Database Port
# Type: int
# Default: 5432
SQL_PORT=5432

# Alternative: Use DATABASE_URL (overrides individual SQL_* variables if set)
# Type: str (parsed by django-environ)
# Format: postgres://USER:PASSWORD@HOST:PORT/DATABASE
# Example: postgres://postgres:postgres@db:5432/pathie_dev
# DATABASE_URL=postgres://postgres:postgres@db:5432/pathie_dev

# ==============================================================================
# PostgreSQL Container Configuration (for docker-compose)
# ==============================================================================

# These variables are used by the PostgreSQL Docker container
# Type: str
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=pathie_dev

# Database name for initial connection (usually same as POSTGRES_DB)
# Type: str
DATABASE=postgres

# ==============================================================================
# External Services (Optional)
# ==============================================================================

# OpenAI API Key (if using AI features)
# Type: str
# Default: None (optional)
# OPENAI_API_KEY=sk-...

# ==============================================================================
# Development Settings
# ==============================================================================

# Django Log Level
# Type: str
# Default: INFO
# Values: DEBUG, INFO, WARNING, ERROR, CRITICAL
# DJANGO_LOG_LEVEL=INFO

# SQL Debug Mode (log all SQL queries)
# Type: bool
# Default: False
# SQL_DEBUG=0

# Production Environment Configuration
# Copy this to .env.prod and adjust with secure values

# Django Core
DEBUG=0
# IMPORTANT: Generate a new secret key for production!
# Use: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY='CHANGE-THIS-TO-A-SECURE-SECRET-KEY'
DJANGO_ALLOWED_HOSTS=yourdomain.com www.yourdomain.com

# PostgreSQL Database
SQL_ENGINE=django.db.backends.postgresql
SQL_DATABASE=pathie_prod
SQL_USER=postgres
# IMPORTANT: Use a strong password in production!
SQL_PASSWORD=CHANGE-THIS-TO-A-SECURE-PASSWORD
SQL_HOST=db
SQL_PORT=5432

# PostgreSQL Container
POSTGRES_USER=postgres
# IMPORTANT: Use a strong password in production!
POSTGRES_PASSWORD=CHANGE-THIS-TO-A-SECURE-PASSWORD
POSTGRES_DB=pathie_prod
DATABASE=postgres

# Optional: Use DATABASE_URL instead of individual SQL_* variables
# DATABASE_URL=postgres://postgres:SECURE_PASSWORD@db:5432/pathie_prod
